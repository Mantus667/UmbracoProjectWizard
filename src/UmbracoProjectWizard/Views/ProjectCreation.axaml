<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UmbracoProjectWizard.Views.ProjectCreation">
    <StackPanel>
        <TextBlock Classes="Headline3" Text="Project Creation" HorizontalAlignment="Center"/>
        <StackPanel HorizontalAlignment="Stretch" Spacing="15" Margin="20, 0">
            <ProgressBar Margin="0 50" Value="{Binding Progress}" />
            <TextBlock Text="{Binding CurrentTask}"/>
            <Grid>
                <Button Command="{Binding $parent[Window].DataContext.GoBack}"
				HorizontalAlignment="Left" Content="Back" Grid.Column="0"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
